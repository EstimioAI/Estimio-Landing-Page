---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: "#how-it-works", label: "How it Works" },
  { href: "#features", label: "Features" },
  { href: "#testimonials", label: "Reviews" },
  { href: "#faq", label: "FAQ" },
  { href: "/privacy", label: "Privacy Policy" },
  { href: "/terms", label: "Terms of Service" },
  { href: "mailto:support@estimio.ai", label: "Contact Us" },
];
---

<footer class="bg-bg-gray border-t border-separator" role="contentinfo">
  <div class="section-container py-12 md:py-16">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 md:gap-12">
      <!-- Brand Column -->
      <div class="md:col-span-5">
        <a
          href="/"
          class="inline-flex items-center group mb-4"
          aria-label="Estimio - Home"
        >
          <img
            src="/assets/screenshots/estimio-logo-text.png"
            alt="Estimio"
            class="logo-footer w-auto"
            width="133"
            height="40"
            loading="lazy"
            decoding="async"
          />
        </a>
        <p class="text-text-secondary text-sm leading-relaxed max-w-sm">
          AI-powered estimates for contractors. Create accurate, professional
          proposals in minutes.
        </p>
      </div>

      <!-- Links Column -->
      <div class="md:col-span-4">
        <h3
          class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-4"
        >
          Company
        </h3>
        <nav aria-label="Footer navigation">
          <ul class="space-y-3">
            {
              footerLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-text-secondary hover:text-primary transition-colors duration-200 text-sm"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Social Column -->
      <div class="md:col-span-3">
        <h3
          class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-4"
        >
          Follow Us
        </h3>
        <a
          href="https://www.instagram.com/estimio.ai/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Follow us on Instagram"
          class="instagram-link text-text-secondary hover:text-primary transition-colors duration-200"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="mt-12 pt-8 border-t border-separator flex flex-col sm:flex-row items-center justify-between gap-4"
    >
      <p class="text-text-tertiary text-sm">
        &copy; {currentYear} Estimio. All rights reserved.
      </p>
      <div class="flex items-center gap-4 text-sm text-text-tertiary">
        <span class="flex items-center gap-1.5">
          <svg
            class="w-4 h-4"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
            ></path>
          </svg>
          Available on iOS
        </span>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer logo sizing - override global img rule */
  .logo-footer {
    height: 1.75rem !important; /* 28px on mobile */
  }

  @media (min-width: 768px) {
    .logo-footer {
      height: 2.5rem !important; /* 40px on desktop */
    }
  }

  /* Hide external link icon on Instagram link */
  .instagram-link::after {
    display: none !important;
  }
</style>

---
const appStoreUrl =
  "https://apps.apple.com/us/app/estimio-ai-estimates/id6746227498";
---

<section class="py-20 md:py-28 lg:py-32 bg-white" aria-labelledby="cta-heading">
  <div class="section-container">
    <div
      class="scale-in relative overflow-hidden rounded-3xl lg:rounded-[2rem] cta-glow"
    >
      <!-- Background with gradient -->
      <div class="absolute inset-0 shimmer-bg"></div>

      <!-- Decorative elements with subtle parallax -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
        data-parallax="0.15"
        aria-hidden="true"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-80 h-80 bg-primary-dark/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
        data-parallax="0.1"
        data-parallax-direction="down"
        aria-hidden="true"
      >
      </div>

      <!-- Content -->
      <div
        class="relative px-8 py-16 md:px-12 md:py-20 lg:px-16 lg:py-24 text-center"
      >
        <!-- Headline -->
        <h2
          id="cta-heading"
          class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold tracking-tight text-white mb-6 leading-tight"
        >
          Stop Guessing.
          <br />
          <span class="text-white/90">Start Winning.</span>
        </h2>

        <!-- Description -->
        <p
          class="text-lg md:text-xl text-white/80 mb-10 max-w-xl mx-auto leading-relaxed"
        >
          Join contractors who are closing more jobs with accurate, professional
          estimates powered by AI.
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-transform duration-300 hover:scale-105"
            aria-label="Download Estimio from the App Store"
          >
            <img
              src="/assets/Download_on_the_App_Store_Badge_US-UK_RGB_wht_092917.svg"
              alt="Download on the App Store"
              class="h-14 w-auto"
              width="157"
              height="47"
              loading="lazy"
              decoding="async"
            />
          </a>
        </div>

        <!-- Trust indicators -->
        <div
          class="mt-12 flex flex-wrap items-center justify-center gap-6 text-sm text-white/60"
        >
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <span>7-day free trial</span>
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <span>Cancel anytime</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

---
const appStoreUrl = "https://apps.apple.com/us/app/estimio-ai-estimates/id6746227498";
---

<section class="py-20 md:py-28 lg:py-32 bg-white">
  <div class="section-container">
    <div class="gsap-scale-in relative overflow-hidden rounded-3xl lg:rounded-[2rem]">
      <!-- Background with gradient -->
      <div class="absolute inset-0 shimmer-bg"></div>

      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary-dark/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

      <!-- Content -->
      <div class="relative px-8 py-16 md:px-12 md:py-20 lg:px-16 lg:py-24 text-center">
        <!-- Icon -->
        <div class="inline-flex items-center justify-center w-16 h-16 mb-8 rounded-2xl bg-white/20 backdrop-blur-sm">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
          </svg>
        </div>

        <!-- Headline -->
        <h2 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold tracking-tight text-white mb-6 leading-tight">
          Stop Guessing.
          <br />
          <span class="text-white/90">Start Winning.</span>
        </h2>

        <!-- Description -->
        <p class="text-lg md:text-xl text-white/80 mb-10 max-w-xl mx-auto leading-relaxed">
          Join contractors who are closing more jobs with accurate, professional estimates powered by AI.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <!-- App Store Badge -->
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-block transition-all duration-300 hover:scale-[1.02] rounded-xl"
            aria-label="Download Estimio on the App Store"
          >
            <img
              src="/assets/Download_on_the_App_Store_Badge_US-UK_RGB_wht_092917.svg"
              alt="Download on the App Store"
              class="h-14 md:h-16"
              width="200"
              height="60"
            />
          </a>

          <!-- Secondary link -->
          <a
            href="#how-it-works"
            class="inline-flex items-center gap-2 px-6 py-3.5 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium hover:bg-white/20 transition-all duration-300 border border-white/20"
          >
            Learn More
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="mt-12 flex flex-wrap items-center justify-center gap-6 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>7-day free trial</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Cancel anytime</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>No credit card required</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

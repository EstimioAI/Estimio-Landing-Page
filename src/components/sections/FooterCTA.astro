---
const appStoreUrl =
  "https://apps.apple.com/us/app/estimio-ai-estimates/id6746227498";
---

<section class="py-20 md:py-28 lg:py-32 bg-white">
  <div class="section-container">
    <div
      class="gsap-scale-in relative overflow-hidden rounded-3xl lg:rounded-[2rem]"
    >
      <!-- Background with gradient -->
      <div class="absolute inset-0 shimmer-bg"></div>

      <!-- Decorative elements -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-80 h-80 bg-primary-dark/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
      >
      </div>

      <!-- Content -->
      <div
        class="relative px-8 py-16 md:px-12 md:py-20 lg:px-16 lg:py-24 text-center"
      >
        <!-- Headline -->
        <h2
          class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold tracking-tight text-white mb-6 leading-tight"
        >
          Stop Guessing.
          <br />
          <span class="text-white/90">Start Winning.</span>
        </h2>

        <!-- Description -->
        <p
          class="text-lg md:text-xl text-white/80 mb-10 max-w-xl mx-auto leading-relaxed"
        >
          Join contractors who are closing more jobs with accurate, professional
          estimates powered by AI.
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
          <a
            href={appStoreUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn flex items-center gap-2 px-8 py-4 rounded-full bg-white text-primary font-bold text-lg shadow-lg hover:bg-white/90 hover:scale-105 transition-all duration-300"
          >
            <svg
              class="w-6 h-6 mb-1"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
              ></path>
            </svg>
            Get the App
          </a>
        </div>

        <!-- Trust indicators -->
        <div
          class="mt-12 flex flex-wrap items-center justify-center gap-6 text-sm text-white/60"
        >
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <span>7-day free trial</span>
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <span>Cancel anytime</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

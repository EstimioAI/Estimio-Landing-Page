---

<section
  id="features"
  class="relative z-40 py-20 md:py-28 lg:py-32 bg-bg-gray scroll-mt-20"
  aria-labelledby="features-heading"
>
  <div class="section-container">
    <!-- Section Header -->
    <div class="text-center mb-14 md:mb-20">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-primary/10 text-primary text-sm font-medium mb-6 shadow-sm"
        data-animate="fade-up"
      >
        <svg
          class="w-4 h-4 text-primary"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"
          ></path>
        </svg>
        Powerful Features
      </div>
      <h2
        id="features-heading"
        class="text-3xl md:text-4xl lg:text-5xl font-semibold text-text-primary tracking-tight mb-5"
        data-animate="fade-up"
        data-animate-delay="1"
      >
        Everything You Need to
        <span class="gradient-text">Run Your Business</span>
      </h2>
      <p
        class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto"
        data-animate="fade-up"
        data-animate-delay="2"
      >
        Tools designed to help you win more jobs, track every dollar, and look
        professional.
      </p>
    </div>

    <!-- Features Grid (Text Only) -->
    <div
      class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto"
    >
      {
        features.map((feature, index) => (
          <div
            class="bg-white p-8 rounded-2xl lg:rounded-3xl border border-separator/50 shadow-sm group feature-card"
            data-animate="fade-up"
            data-animate-delay={index + 1}
          >
            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6 group-hover:bg-primary group-hover:text-white transition-colors duration-300 ease-out">
              <span set:html={feature.icon} />
            </div>
            <h3 class="text-xl font-semibold text-text-primary mb-3">
              {feature.title}
            </h3>
            <p class="text-text-secondary leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

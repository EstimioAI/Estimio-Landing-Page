---
import FeatureCard from '../ui/FeatureCard.astro';

const featuresTop = [
  {
    title: 'Photo-Powered Estimates',
    description: 'Snap a photo of the job site and let AI analyze dimensions, materials, and scope automatically.',
    image: '/assets/screenshots/Photo-Powered Estimates.jpg',
    imageAlt: 'Photo-powered estimates feature showing camera integration',
    icon: 'camera',
    badge: 'AI Vision',
  },
  {
    title: 'Instant Localized Pricing',
    description: 'Get accurate material and labor costs based on your specific location and current market rates.',
    image: '/assets/screenshots/Instant Localized Pricing.jpg',
    imageAlt: 'Instant localized pricing feature showing real-time costs',
    icon: 'location',
    badge: 'Real-time',
  },
];

const featuresBottom = [
  {
    title: 'Revise in Seconds',
    description: 'Need to adjust scope or materials? Simply describe the changes and get an updated estimate instantly.',
    image: '/assets/screenshots/Revise in Seconds.png',
    imageAlt: 'Revise in seconds feature showing quick edits',
    icon: 'refresh',
  },
  {
    title: 'Know Your Margins',
    description: 'See your profit margins clearly on every estimate. Set markup targets and optimize your pricing.',
    image: '/assets/screenshots/Know your Margins.png',
    imageAlt: 'Know your margins feature showing profit analysis',
    icon: 'chart',
  },
  {
    title: 'Professional Proposals',
    description: 'Generate polished, client-ready proposals with your branding that win more jobs.',
    image: '/assets/screenshots/Professional Proposals.png',
    imageAlt: 'Professional proposals feature showing branded documents',
    icon: 'document',
  },
];
---

<section id="features" class="py-20 md:py-28 lg:py-32 bg-bg-gray scroll-mt-20">
  <div class="section-container">
    <!-- Section Header -->
    <div class="text-center mb-14 md:mb-20">
      <div class="gsap-fade-up inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-separator text-text-secondary text-sm font-medium mb-6 shadow-sm">
        <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
        </svg>
        Powerful Features
      </div>
      <h2 class="gsap-fade-up text-3xl md:text-4xl lg:text-5xl font-semibold text-text-primary tracking-tight mb-5">
        Everything You Need to
        <span class="gradient-text">Win More Jobs</span>
      </h2>
      <p class="gsap-fade-up text-lg md:text-xl text-text-secondary max-w-2xl mx-auto">
        Powerful features designed to streamline your estimating workflow and close more deals
      </p>
    </div>

    <!-- Features Grid -->
    <div class="space-y-6 lg:space-y-8">
      <!-- Top Row - 2 columns (larger cards) -->
      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {featuresTop.map((feature, index) => (
          <FeatureCard {...feature} size="large" index={index} />
        ))}
      </div>

      <!-- Bottom Row - 3 columns -->
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 lg:gap-8">
        {featuresBottom.map((feature, index) => (
          <FeatureCard {...feature} size="default" index={index + 2} />
        ))}
      </div>
    </div>
  </div>
</section>
